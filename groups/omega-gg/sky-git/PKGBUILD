# Maintainer: 

pkgname=sky-git
pkgver=2.0.0.r157.g8ca0d83
pkgrel=1
pkgdesc="Application kit designed for multimedia software"
arch=(x86_64 i686 arm armv6h armv7h aarch64)
url="https://github.com/omega-gg/Sky"
license=(LGPL3)
depends=(qt5-base vlc libtorrent) #boost-libs
makedepends=(git boost qt5-xmlpatterns qt5-quickcontrols qt5-quickcontrols2 qtdbusextended) #lib32-glibc
provides=(sky)
conflicts=(sky)
source=("git+https://github.com/omega-gg/Sky.git")
sha256sums=('SKIP')

pkgver() {
  cd Sky
  git describe --long --tags --abbrev=7 | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  export CFLAGS+=" -Wno-implicit-function-declaration"
  #export CXXFLAGS+=" -Wno-implicit-function-declaration"

  cd Sky
  #./build.sh linux
  #./configure.sh qt5 linux
  qmake Sky.pro
  make
}

package() {
  cd Sky
  make INSTALL_ROOT="${pkgdir}/" install
}
